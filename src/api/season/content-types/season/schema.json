{
  "kind": "collectionType",
  "collectionName": "seasons",
  "info": {
    "singularName": "season",
    "pluralName": "seasons",
    "displayName": "Season"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "season_stories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::season-story.season-story",
      "mappedBy": "season"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "season"
    },
    "storyline": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::storyline.storyline",
      "mappedBy": "season"
    },
    "titleRu": {
      "type": "string"
    }
  }
}
